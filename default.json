{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "enabled": true,
  "description": "Default Renovate config used by @Kiruyuto",
  "extends": [
    "config:recommended",
    "group:allNonMajor",
    ":gitSignOff",
    ":dependencyDashboard",
    ":enableVulnerabilityAlerts"
  ],
  "labels": ["dependencies"],
  "dependencyDashboardLabels": ["dependencies"],
  "rangeStrategy": "bump",
  "assigneesFromCodeOwners": true,
  "commitBodyTable": true,
  "configMigration": true,
  "branchPrefix": "dependencies/",
  "prCreation": "immediate",
  "prConcurrentLimit": 0,
  "prBodyTemplate": "{{{header}}}{{{table}}}{{{warnings}}}{{{notes}}}{{{changelogs}}}{{{controls}}}{{{footer}}}",
  "dependencyDashboardFooter": "Renovate extends from @Kiruyuto's default configuration. You can see all settings [here](https://github.com/Kiruyuto/renovate-config/blob/master/default.json)",
  "commitMessageLowerCase": "never",
  "semanticCommits": "enabled",
  "semanticCommitScope": "deps",
  "rebaseWhen": "behind-base-branch",
  "major": {
    "description": "Require dashboard approval for major updates",
    "dependencyDashboardApproval": true
  },
  "packageRules": [
    {
      "description": "Always use 'chore' for semantic commit type",
      "matchFileNames": ["**/*"],
      "semanticCommitType": "chore"
    },
    {
      "description": "AWS based packages for nuget & npm will be checked on weekly basis as they are updates way too often",
      "matchDatasources": ["nuget", "npm"],
      "matchPackageNames": ["aws-sdk", "AWSSDK"],
      "matchPackagePatterns": ["^@aws-sdk/"],
      "extends": ["schedule:weekly"]
    }
  ]
}